{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Another Customer App",
  "version": "1.0.0",
  "identifier": "com.another-customer.app",
  "build": {
    "frontendDist": "../client/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev:client"
  },
  "app": {
    "windows": [
      {
        "title": "Another Customer App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "../client/out/**/*"
        ]
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "externalBin": [
      "bin/server"
    ],
    "resources": [
      ".env"
    ],
    "active": true,
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "installerHooks": "./windows/hooks.nsi"
      },
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    },
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "basicUi"
      },
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENEOENERjY1NzA1NjRGNjQKUldSa1QxWndaZCtNemRxOHdqWDZxOXA0K2FkM2dwTnVLWHRJVFRicS82Yk1tTDJMU3IzUmMyUHAK",
      "endpoints": [
        "https://github.com/michelazzam/car-components/releases/latest/download/latest.json"
      ],
      "dialog": {
        "active": true
      }
    },
    "fs": {
      "scope": [
        "$APPDATA/**",
        "$HOME/projects/Another Customer App/**"
      ]
    },
    "log": {
      "level": "info",
      "targets": [
        "File"
      ]
    }
  }
}