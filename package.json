{
  "name": "car-components",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:client": "npm run dev --prefix client",
    "dev:server": "npm run start:dev --prefix server",
    "build:client": "npm run build --prefix client",
    "build:server": "npm run build --prefix server",
    "tauri:dev": "tauri dev",
    "tauri:key": "powershell -Command \"$env:TAURI_SIGNING_PRIVATE_KEY = Get-Content -Raw '.\\src-tauri\\~\\.tauri\\myapp.key'; npm run tauri:build -- --debug\"",
    "tauri:build-debug": "npm run tauri:build --debug",
    "tauri:build": "tauri build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "prod": "concurrently \"npm run server:prod\" \"npm run client:prod\"",
    "client": "cd client && npm run dev",
    "client:prod": "cd client && npm start",
    "server": "cd server && npm run dev",
    "server:prod": "cd server && npm start",
    "server:pkg": "npm run pkg --prefix server",
    "tauri:prod": "npm run server:pkg && npm run tauri:build "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michelazzam/Car-Components.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/michelazzam/Car-Components/issues"
  },
  "homepage": "https://github.com/michelazzam/Car-Components#readme",
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@tauri-apps/cli": "^2.5.0",
    "concurrently": "^9.1.2",
    "pkg": "^5.8.1",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "^2.2.1",
    "@tauri-apps/plugin-process": "^2.2.1",
    "@tauri-apps/plugin-updater": "^2.7.1"
  }
}
